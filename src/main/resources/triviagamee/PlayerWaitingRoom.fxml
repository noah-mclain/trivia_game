<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane fx:id="parentPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="triviagamee.PlayerWaitingRoom"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <Label fx:id="waitingLabel" text="Waiting for host to start game..."
               layoutX="10.0" layoutY="10.0" AnchorPane.leftAnchor="10.0"  AnchorPane.rightAnchor="10.0" />
        <ImageView fx:id="loadingGIF"  fitWidth="30.0" fitHeight="30.0"
                   AnchorPane.topAnchor="10.0" AnchorPane.rightAnchor="10.0" >
                <image>
                    <Image url = "@../photos/clock-timer.gif"/>
                </image>
        </ImageView>
        <TextArea fx:id="userUpdate" layoutX="10.0" layoutY="40.0"
                  prefHeight="200.0" prefWidth="500.0" wrapText="true"
                  AnchorPane.leftAnchor="10.0"  AnchorPane.rightAnchor="10.0" editable="false"/>

        <TextField fx:id="typing" layoutX="10.0" layoutY="250.0" promptText="You are able to chat"
                   prefHeight="30.0" prefWidth="500.0" AnchorPane.leftAnchor="10.0"  AnchorPane.rightAnchor="10.0" visible="false" onKeyPressed="#addToUserUpdate"/>

        <Label fx:id="editableLabel" text="Press Enter to chat" layoutX="10.0" layoutY="290.0"
               AnchorPane.leftAnchor="10.0"  AnchorPane.rightAnchor="10.0" />
        <Button fx:id="startButton" text="Start Game" layoutY="300.0" layoutX="300.0" onAction="#hostStartGame" visible="false" />
    </children>
</AnchorPane>
