<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="parentPane" prefHeight="872.0" prefWidth="1109.0" stylesheets="@Font.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="triviagamee.PlayerWaitingRoom">

    <children>
      <ImageView fitHeight="872.0" fitWidth="1109.0" pickOnBounds="true">
         <image>
            <Image url="@../photos/Waiting.jpg" />
         </image>
      </ImageView>
        <Label fx:id="waitingLabel" layoutX="74.0" layoutY="42.0" styleClass="genre" text="Waiting for host to start game..." textFill="#f500ff" AnchorPane.leftAnchor="74.0" AnchorPane.rightAnchor="-54.0">
         <font>
            <Font size="36.0" />
         </font>
         <effect>
            <Glow level="1.0" />
         </effect></Label>
        <ImageView fx:id="loadingGIF" fitHeight="30.0" fitWidth="30.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                <image>
                    <Image url="@../photos/clock-timer.gif" />
                </image>
        </ImageView>
        <TextArea fx:id="userUpdate" editable="false" layoutX="137.0" layoutY="196.0" prefHeight="501.0" prefWidth="828.0" styleClass="chatRoom" wrapText="true" AnchorPane.leftAnchor="137.0" AnchorPane.rightAnchor="144.0" />

        <TextField fx:id="typing" layoutX="10.0" layoutY="250.0" onKeyPressed="#addToUserUpdate" prefHeight="30.0" prefWidth="500.0" promptText="You are able to chat" visible="false" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" />

        <Label fx:id="editableLabel" layoutX="146.0" layoutY="668.0" prefHeight="17.0" prefWidth="815.0" styleClass="chatRoom" textFill="RED" AnchorPane.leftAnchor="146.0" AnchorPane.rightAnchor="148.0">
         <effect>
            <Glow level="1.0" />
         </effect>
         <font>
            <Font size="18.0" />
         </font></Label>
        <Button fx:id="startButton" layoutX="300.0" layoutY="300.0" onAction="#hostStartGame" text="Start Game" visible="false" />
    </children>
</AnchorPane>
