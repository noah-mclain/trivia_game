<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="triviagamee.LoginMenuController">

    <Text fx:id="triviaText" text="TRIVIA!" style="-fx-font-size: 48px; -fx-fill: lightblue;">
        <effect>
            <Glow>
                <level>0.8</level>
            </Glow>
        </effect>
    </Text>

    <HBox spacing="10">
        <Label text="Username:" />
        <TextField fx:id="usernameField" promptText="Enter username" />
    </HBox>

    <HBox spacing="10">
        <Label text="Password:" />
        <PasswordField fx:id="passwordField" promptText="Enter password" />
    </HBox>

    <HBox spacing="10">
        <Label text="Server IP:" />
        <TextField fx:id="ipAddressField" promptText="Enter server IP" />
    </HBox>

    <HBox spacing="10">
        <Button fx:id="loginButton" text="Login" onAction="#handleLoginClick" />
        <Button fx:id="signupButton" text="Sign Up" onAction="#handleSignupClick" />
    </HBox>

    <Circle fx:id="connectionStatus" radius="10" fill="RED" />

</VBox>
